<%- include("partials/header.ejs") %>
                    <div id="kt_content_container" class="d-flex flex-column-fluid align-items-start container-fluid">
                        <div class="content flex-row-fluid" id="kt_content">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="fw-bolder fs-1 pt-0">Danh Má»¥c: <%= category %></div>
                                    <div class="row">
                                        <% info_category.forEach(function(item) { %>
                                        <% var episode = JSON.parse(item.m3u8); %>
                                        <div class="col-lg-2 col-6 item p-3">
                                            <a class="position-relative rounded" href="/phim/<%= item.slug %>/<%= episode[0].server_data[0].slug %>">
